{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "üöÄ Launch Astro Dev Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/astro",
			"args": ["dev", "--host"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"env": {
				"NODE_ENV": "development"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
		},
		{
			"name": "üöÄ Launch Astro Dev (pnpm)",
			"type": "node",
			"request": "launch",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["dev"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"env": {
				"NODE_ENV": "development"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
		},
		{
			"name": "üîß Debug Astro Build",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/astro",
			"args": ["build"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"env": {
				"NODE_ENV": "production"
			}
		},
		{
			"name": "üß™ Debug Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/vitest",
			"args": ["run"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"]
		},
		{
			"name": "üåê Attach to Running Process",
			"type": "node",
			"request": "attach",
			"port": 9229,
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"]
		},
		{
			"name": "üîç Debug Astro SSR/API Routes",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/astro",
			"args": ["dev", "--host"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"skipFiles": ["<node_internals>/**", "**/node_modules/**"],
			"env": {
				"NODE_ENV": "development",
				"DEBUG": "*"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
			"sourceMaps": true,
			"smartStep": true,
			"stopOnEntry": false
		}
	]
}
